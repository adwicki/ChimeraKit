{
  "Core": {
    "ModuleRoot": "modules\\",
    "AvailableModules": [
      {
        "ModulePath": "ChimeraKit.Module.ExamplePrepend",
        "ModuleName": "ChimeraKit.Module.ExamplePrepend"
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "ChimeraKit": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information"
      },
      "FormatterName": "chimera-kit-formatter",
      "FormatterOptions": {
        "SingleLine": true,
        "TimestampFormat": "yyyy-MM-dd HH:mm:ss.fff "
      }
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext"
    ],
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "ExamplePrepend": {
    "SeparationCharacter": "_"
  }
}
